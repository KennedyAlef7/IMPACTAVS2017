@using Oficina.WebPages;
@{

    var _veiculoAplicacao = new VeiculoAplicacao();
    if (IsPost)
    {
        _veiculoAplicacao.Inserir();

    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro de veículos</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<style>
    body {
        font-size:16px;
        font-family: 'Roboto', sans-serif;
    }
    label{
        min-width : 100px;
        display:inline-block;
        
    }

    input,select{
        min-width:200px;
        min-height:24px;
        margin-bottom:5px;
    }
    input[type=submit]{
        width:300px;
    }
    
</style>


</head>
<body>
    <h1>Cadastro de veículos</h1>
    <hr />
    <form method="post">
        <label for="marca">Marca</label>
        <select name="marca" id="marca" onchange="obterModelos(this.value)">
            <option value="value">Selecione</option>
            @foreach(var item in _veiculoAplicacao.Marcas)
            {
               <option value="@item.Id" selected="@Convert.ToBoolean(item.Id.ToString() ==  _veiculoAplicacao.MarcaSelecionada)">@item.Nome</option>
            }

        </select>
        <br />

        <label for="modelo">Modelo</label>
        <select name="modelo" id="modelo">
            <option value="value">Selecione</option>
            @foreach (var item in _veiculoAplicacao.Modelos)
            {
                <option value="@item.Id">@item.Nome</option>
            }

        </select>
        <br />

        <label for="marca">Placa</label>
        <input type="text" name="placa" id="placa"/>

        <br />

        <label for="marca">Ano</label>
        <input type="text" name="ano" id="ano" />
        <br />

        <label for="modelo">Cor</label>

        <select name="cor" id="cor">
            <option value="value">Selecione</option>
            @foreach (var item in _veiculoAplicacao.Cores)
            {
                <option value="@item.Id">@item.Nome</option>
            }

        </select>

        <br />

        <label for="combustivel">Combustivel</label>

        <select name="combustivel" id="combustivel">
            <option value="value">Selecione</option>
            @foreach (var item in _veiculoAplicacao.Combustiveis)
            {
                <option value="@(Convert.ToInt32(item))">@item.ToString()</option>
            }

        </select>

        <br />

        <label for="cambio">Cambio</label>
        <select name="cambio" id="cambio">
            <option value="value">Selecione</option>
            @foreach (var item in _veiculoAplicacao.Cambios)
            {
                <option value="@(Convert.ToInt32(item))">@item.ToString()</option>
            }

        </select>

        <br />
        <label for="cambio">Observacao</label>
        <br />

        <textarea name="observacao" id="observacao" rows="10" cols="40"></textarea>
        <br />

        <input type="submit" value="Gravar"/>

    </form>

    <script type="text/javascript">
        function obterModelos(marcaId) {
            var nomePagina = document.location.pathname;
            document.location.href = nomePagina + "?marcaId=" + marcaId;
        }


    </script>
</body>
</html>
